# Staging Environment Configuration
# Copy to .env.staging and customize

# Node environment
NODE_ENV=staging

# Keycloak Configuration
KEYCLOAK_URL=http://localhost:8090
KEYCLOAK_REALM=healthcare-domain
KEYCLOAK_CLIENT_ID=gateway-client
KEYCLOAK_CLIENT_SECRET=gateway-client-secret-change-in-production
KEYCLOAK_ADMIN=admin
KEYCLOAK_ADMIN_PASSWORD=admin
CALLBACK_URL=http://localhost:3042/auth/callback

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=staging-redis-password
REDIS_URL=redis://:staging-redis-password@localhost:6380

# Gateway Configuration
PORT=3042
HOST=0.0.0.0
LOG_LEVEL=info

# Demo Users (set to 'true' to skip creation)
SKIP_DEMO_USERS=false

# Database (if needed)
DATABASE_NAME=gateway_staging
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=gateway
DATABASE_PASSWORD=change-in-production
