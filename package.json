{
  "name": "api-gateway-suite",
  "version": "1.7.0",
  "description": "API Gateway centralizzato per suite software healthcare",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/auth",
    "packages/cache",
    "packages/events",
    "packages/telemetry",
    "services/*"
  ],
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "// ==== Development ====": "",
    "dev": "wattpm dev",
    "start": "wattpm start",
    "build": "wattpm build",
    "build:packages": "npm run build --workspaces --if-present",
    "build:all": "npm run build:packages && npm run build",
    "// ==== Code Quality ====": "",
    "lint": "eslint \"{services,packages}/**/*.ts\" --fix",
    "lint:check": "eslint \"{services,packages}/**/*.ts\"",
    "format": "prettier --write \"services/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.{js,cjs}\" \"*.{json,md}\" || prettier --write \"packages/**/*.ts\" 2>/dev/null || true",
    "format:check": "prettier --check \"services/**/*.ts\" \"test/**/*.ts\" \"scripts/**/*.{js,cjs}\" \"*.{json,md}\"",
    "quality": "npm run format:check && npm run lint:check",
    "quality:fix": "npm run format && npm run lint",
    "analyze": "node scripts/analyze-complexity.cjs --type=all",
    "analyze:cognitive": "node scripts/analyze-complexity.cjs --type=cognitive",
    "analyze:json": "node scripts/analyze-complexity.cjs --type=all --json",
    "// ==== Testing ====": "",
    "test": "tap",
    "test:unit": "tap 'packages/**/test/**/*.test.ts' 'services/**/test/**/*.test.ts' --disable-coverage",
    "test:watch": "tap --watch",
    "test:cov": "tap --coverage-report=html --coverage-report=lcov --coverage-report=text",
    "test:integration": "npm run build:packages && NODE_ENV=test tap 'packages/**/test/**/*.integration.test.ts' 'services/**/test/**/*.integration.test.ts' --disable-coverage",
    "test:integration:infra": "npm run build:packages && bash scripts/test-infra-start.sh keycloak && npm run test:integration; EXIT_CODE=$?; bash scripts/test-infra-stop.sh keycloak; exit $EXIT_CODE",
    "test:e2e": "npm run build:packages && tap 'e2e/**/*.test.ts' --disable-coverage",
    "test:e2e:cucumber": "npm run build:packages && cucumber-js",
    "test:e2e:infra": "npm run build:packages && bash scripts/test-infra-start.sh keycloak && npm run test:e2e; EXIT_CODE=$?; bash scripts/test-infra-stop.sh keycloak; exit $EXIT_CODE",
    "test:cleanup": "bash scripts/test-cleanup.sh",
    "test:stack": "bash scripts/test-stack.sh",
    "test:environments": "bash scripts/test-environments.sh",
    "test:cov:all": "tap --coverage-report=html --coverage-report=lcov --coverage-report=text",
    "verify": "npm run format:check && npm run lint:check && npm run test && npm run build",
    "verify:full": "npm run verify && npm run test:cov:all",
    "// ==== Environment ====": "",
    "env:validate": "bash scripts/validate-env.sh",
    "env:test": "bash scripts/test-environments.sh",
    "env:check": "npm run env:validate && npm run env:test",
    "// ==== Infrastructure ====": "",
    "infra:start": "bash scripts/infra-start.sh development",
    "infra:start:test": "bash scripts/infra-start.sh test",
    "infra:stop": "bash scripts/infra-stop.sh development",
    "infra:stop:test": "bash scripts/infra-stop.sh test",
    "infra:clean": "bash scripts/infra-stop.sh development volumes",
    "// ==== Deployment ====": "",
    "prod:start": "docker compose -f docker-compose.prod.yml up -d",
    "prod:stop": "docker compose -f docker-compose.prod.yml down",
    "prod:logs": "docker compose -f docker-compose.prod.yml logs -f",
    "prod:build": "docker compose -f docker-compose.prod.yml build",
    "// ==== Security ====": "",
    "security:check": "node scripts/check-secrets.cjs",
    "security:scan": "npm audit --audit-level=moderate",
    "// ==== Release ====": "",
    "release": "node scripts/auto-release.cjs --type=\"auto\"",
    "release:suggest": "node scripts/auto-release.cjs --type=\"auto\" --dry-run",
    "release:minor": "node scripts/auto-release.cjs --type=\"minor\"",
    "release:major": "node scripts/auto-release.cjs --type=\"major\"",
    "release:changelog": "bash scripts/generate-release-notes.sh",
    "features:update": "node scripts/update-features.js",
    "features:preview": "node scripts/update-features.js --dry-run",
    "features:validate": "npx --yes ajv-cli validate -s features.schema.json -d features.json --strict=false",
    "// ==== Utilities ====": "",
    "keys:generate": "node scripts/generate-keys.js",
    "keys:rsa": "node scripts/generate-keys.js --type=rsa --env=development",
    "keys:rsa:prod": "node scripts/generate-keys.js --type=rsa --env=production --bits=4096",
    "keys:jwt": "node scripts/generate-keys.js --type=jwt-secret",
    "keys:api": "node scripts/generate-keys.js --type=api-key",
    "keys:session": "node scripts/generate-keys.js --type=session-secret",
    "keys:keycloak": "node scripts/generate-keys.js --type=keycloak-secret",
    "keys:all": "node scripts/generate-keys.js --all --env=development",
    "keys:all:prod": "node scripts/generate-keys.js --all --env=production",
    "// ==== Git Hooks ====": "",
    "prepare": "husky",
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "eslint --fix --ignore-pattern 'packages/test-helpers/**' --ignore-pattern '.tap/**'",
      "prettier --write"
    ],
    "*.{json,md,yml}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@cucumber/cucumber": "^12.3.0",
    "@eslint/js": "^9.39.1",
    "@types/chai": "^5.2.3",
    "@types/node": "^22.19.2",
    "@types/node-fetch": "^2.6.13",
    "ajv-formats": "^3.0.1",
    "c8": "^10.1.3",
    "chai": "^6.2.1",
    "dotenv": "^16.4.7",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-sonarjs": "^0.25.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "node-fetch": "^2.7.0",
    "prettier": "^3.7.4",
    "tap": "^21.5.0",
    "testcontainers": "^11.10.0",
    "tsx": "^4.21.0",
    "typescript": "^5.7.0",
    "typescript-eslint": "^8.48.1",
    "wattpm": "^3.0.0",
    "yaml": "^2.8.2"
  },
  "tap": {
    "node-arg": [
      "--no-warnings",
      "--import=tsx"
    ],
    "exclude": [
      "node_modules/**",
      "dist/**",
      "coverage/**",
      "**/*.integration.test.ts",
      "**/*.e2e.test.ts"
    ]
  }
}
