{
  "$schema": "https://schemas.platformatic.dev/@platformatic/service/3.0.0.json",
  "server": {
    "hostname": "{PLT_SERVER_HOSTNAME}",
    "port": "{PORT}",
    "logger": {
      "level": "{LOG_LEVEL}",
      "transport": {
        "target": "pino-pretty",
        "options": {
          "translateTime": "HH:MM:ss Z",
          "ignore": "pid,hostname",
          "colorize": true
        }
      }
    }
  },
  "plugins": {
    "paths": ["src/index.ts"]
  }
}
