# Environment Configuration Template for Production
# Used by deploy-gateway.yml playbook
# Replace placeholders with real values

# Server Configuration
NODE_ENV=production
LOG_LEVEL=info
PLT_SERVER_HOSTNAME=0.0.0.0
PORT=3042

# Domain Configuration
DOMAIN={{ domain }}
CLOUDFLARE_ZONE_ID={{ cloudflare_zone_id }}
CLOUDFLARE_API_TOKEN={{ cloudflare_api_token }}

# Database (placeholder for future)
# DATABASE_URL=postgresql://user:pass@localhost:5432/gateway_prod

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD={{ redis_password | default('') }}

# RabbitMQ
RABBITMQ_URL=amqp://localhost:5672
RABBITMQ_USER={{ rabbitmq_user | default('guest') }}
RABBITMQ_PASSWORD={{ rabbitmq_password | default('guest') }}

# Security
JWT_SECRET={{ jwt_secret }}
SESSION_SECRET={{ session_secret }}

# Observability
PROMETHEUS_METRICS_ENABLED=true
LOKI_URL=http://localhost:3100
TEMPO_URL=http://localhost:3200

# Gateway Configuration
GATEWAY_TIMEOUT=30000
CIRCUIT_BREAKER_THRESHOLD=50
CIRCUIT_BREAKER_TIMEOUT=30000

# External Services (placeholder)
# PATIENT_SERVICE_URL=http://patient-api:3001
# APPOINTMENT_SERVICE_URL=http://appointment-api:3002
