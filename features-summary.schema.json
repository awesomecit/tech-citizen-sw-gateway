{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://tech-citizen-sw-gateway/features-summary.schema.json",
  "title": "Features Summary Schema",
  "description": "UI-friendly feature tracking summary for Tech Citizen Software Gateway",
  "type": "object",
  "required": ["version", "lastUpdated", "summary", "features"],
  "properties": {
    "$schema": {
      "type": "string"
    },
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "lastUpdated": {
      "type": "string",
      "format": "date-time"
    },
    "summary": {
      "type": "object",
      "required": [
        "totalFeatures",
        "active",
        "blocked",
        "planned",
        "completed",
        "globalProgress"
      ],
      "properties": {
        "totalFeatures": { "type": "integer", "minimum": 0 },
        "active": { "type": "integer", "minimum": 0 },
        "blocked": { "type": "integer", "minimum": 0 },
        "planned": { "type": "integer", "minimum": 0 },
        "completed": { "type": "integer", "minimum": 0 },
        "globalProgress": { "type": "integer", "minimum": 0, "maximum": 100 },
        "coverage": {
          "type": "object",
          "properties": {
            "percentage": { "type": "integer", "minimum": 0, "maximum": 100 },
            "lines": {
              "type": "object",
              "properties": {
                "covered": { "type": "integer", "minimum": 0 },
                "total": { "type": "integer", "minimum": 0 }
              }
            },
            "filesAtZero": { "type": "integer", "minimum": 0 }
          }
        },
        "tests": {
          "type": "object",
          "properties": {
            "total": { "type": "integer", "minimum": 0 },
            "passing": { "type": "integer", "minimum": 0 },
            "failing": { "type": "integer", "minimum": 0 },
            "suites": {
              "type": "object",
              "properties": {
                "unit": { "type": "integer", "minimum": 0 },
                "integration": { "type": "integer", "minimum": 0 },
                "e2e": { "type": "integer", "minimum": 0 }
              }
            }
          }
        }
      }
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "epicId", "name", "status", "priority", "progress"],
        "properties": {
          "id": { "type": "string" },
          "epicId": { "type": "string", "pattern": "^EPIC-\\d{3}$" },
          "name": { "type": "string" },
          "description": { "type": "string" },
          "status": {
            "type": "string",
            "enum": ["in-progress", "blocked", "todo", "done"]
          },
          "priority": {
            "type": "string",
            "enum": ["critical", "high", "medium", "low"]
          },
          "progress": {
            "type": "object",
            "properties": {
              "percentage": { "type": "integer", "minimum": 0, "maximum": 100 },
              "userStories": {
                "type": "object",
                "properties": {
                  "total": { "type": "integer", "minimum": 0 },
                  "completed": { "type": "integer", "minimum": 0 },
                  "inProgress": { "type": "integer", "minimum": 0 },
                  "todo": { "type": "integer", "minimum": 0 }
                }
              }
            }
          },
          "environment": {
            "type": "object",
            "properties": {
              "dev": { "type": "boolean" },
              "test": { "type": "boolean" },
              "staging": { "type": "boolean" },
              "production": { "type": "boolean" }
            }
          },
          "userStories": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "status"],
              "properties": {
                "id": { "type": "string", "pattern": "^US-\\d{3}$" },
                "name": { "type": "string" },
                "status": {
                  "type": "string",
                  "enum": ["done", "in-progress", "todo", "blocked"]
                },
                "coverage": { "type": "integer", "minimum": 0, "maximum": 100 },
                "tests": {
                  "type": "object",
                  "properties": {
                    "total": { "type": "integer", "minimum": 0 },
                    "passing": { "type": "integer", "minimum": 0 }
                  }
                },
                "bdd": {
                  "type": "object",
                  "properties": {
                    "file": { "type": "string" },
                    "scenarios": { "type": "integer", "minimum": 0 }
                  }
                }
              }
            }
          },
          "blockers": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "type": {
                  "type": "string",
                  "enum": ["external", "dependency", "technical"]
                },
                "description": { "type": "string" },
                "severity": {
                  "type": "string",
                  "enum": ["critical", "high", "medium", "low"]
                },
                "blockedBy": { "type": "string" }
              }
            }
          },
          "dependencies": {
            "type": "array",
            "items": { "type": "string" }
          },
          "metrics": {
            "type": "object",
            "properties": {
              "estimatedHours": { "type": "number", "minimum": 0 },
              "actualHours": { "type": "number", "minimum": 0 },
              "remainingHours": { "type": "number", "minimum": 0 },
              "velocity": { "type": "number", "minimum": 0 }
            }
          },
          "releaseTarget": {
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
          }
        }
      }
    },
    "bddScenarios": {
      "type": "object",
      "properties": {
        "total": { "type": "integer", "minimum": 0 },
        "files": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["file", "userStory", "status"],
            "properties": {
              "file": { "type": "string" },
              "userStory": { "type": "string", "pattern": "^US-\\d{3}$" },
              "scenarios": { "type": "integer", "minimum": 0 },
              "status": {
                "type": "string",
                "enum": ["implemented", "in-progress", "todo"]
              }
            }
          }
        }
      }
    },
    "technicalDebt": {
      "type": "object",
      "properties": {
        "coverage": {
          "type": "object",
          "properties": {
            "filesAtZero": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["file", "priority", "target"],
                "properties": {
                  "file": { "type": "string" },
                  "priority": {
                    "type": "string",
                    "pattern": "^P[0-3]$"
                  },
                  "lines": { "type": "integer", "minimum": 0 },
                  "target": { "type": "string" },
                  "blocker": { "type": "string" }
                }
              }
            }
          }
        },
        "security": {
          "type": "object",
          "properties": {
            "npmAudit": {
              "type": "object",
              "properties": {
                "vulnerabilities": {
                  "type": "object",
                  "properties": {
                    "critical": { "type": "integer", "minimum": 0 },
                    "high": { "type": "integer", "minimum": 0 },
                    "moderate": { "type": "integer", "minimum": 0 },
                    "low": { "type": "integer", "minimum": 0 }
                  }
                },
                "details": { "type": "string" }
              }
            }
          }
        }
      }
    },
    "milestones": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["version", "target", "goals", "status"],
        "properties": {
          "version": { "type": "string", "pattern": "^v\\d+\\.\\d+\\.\\d+$" },
          "target": { "type": "string", "format": "date" },
          "goals": {
            "type": "array",
            "items": { "type": "string" }
          },
          "status": {
            "type": "string",
            "enum": ["in-progress", "planned", "completed"]
          }
        }
      }
    },
    "quickCommands": {
      "type": "object",
      "additionalProperties": { "type": "string" }
    }
  }
}
