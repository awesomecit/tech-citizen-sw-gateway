{
  "compilerOptions": {
    "target": "ES2024",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@tech-citizen/auth": ["./packages/auth/src"],
      "@tech-citizen/cache": ["./packages/cache/src"],
      "@tech-citizen/events": ["./packages/events/src"],
      "@tech-citizen/telemetry": ["./packages/telemetry/src"]
    }
  },
  "include": ["services/**/*.ts", "packages/**/*.ts", "e2e/**/*.ts"],
  "exclude": ["node_modules", "dist"]
}
